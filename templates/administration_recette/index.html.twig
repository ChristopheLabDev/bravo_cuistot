 {# ? Feuille : Gestion des recettes #ModeAdmin #} 

 {% extends 'base.html.twig' %}
 
     {% block metaTitle %}
         " Gestion des recettes "
     {% endblock %}

     {% block title %}
         Gestion des recettes
     {% endblock %}
     
     {% block body %}

         <main class="Form">  

             <section class="text-center">
    
                 <h1 class="h1 mb-3 font-weight-normal"> Gestion des recettes </h1>
         
             </section>

             <article>
     
                 <table class="table table-dark table-hover">

                     <thead>

                         <tr>
                             <th> Id </th>
                             <th> Nom </th>
                             <th> Image </th>
                             <th> Temps de préparation </th>
                             <th> Temps de cuisson </th>
                             <th> Nombre de personnes </th>
                             <th> Difficulté </th>
                             <th> Actions </th>
                         </tr>

                     </thead>

                     <tbody>

                         {% for recette in recettes %}
                         
                             <tr>
                                 <td> {{ recette.id }} </td>
                                 <td> {{ recette.name }} </td>
                                 <td> {{ recette.image }} </td>
                                 <td> {{ recette.tempsPreparation }} </td>
                                 <td> {{ recette.tempsCuisson }} </td>
                                 <td> {{ recette.nbPersonnes }} </td>
                                 <td> {{ recette.difficulte }} </td>

                                 <td>
                                     <a href="{{ path('administration_recette_show', {'id': recette.id}) }}"> Voir </a>
                                     <a href="{{ path('administration_recette_edit', {'id': recette.id}) }}"> Modifier </a>
                                 </td>

                             </tr>

                         {% else %}

                             <tr>
                                 <td colspan="8"> Aucun élément ne correspond à votre recherche </td>
                             </tr>

                         {% endfor %}

                     </tbody>

                 </table>
     
                 <a href="{{ path('administration_recette_new') }}" class="btn btn-success col-12 btn-lg px-4 gap-3"> Créer une nouvelle recette </a>

             </article>

         </main>  

 {% endblock %}
 