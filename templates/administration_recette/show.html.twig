 {# ? Feuille : Gestion des recettes #ModeAdmin #} 

 {% extends 'base.html.twig' %}

     {% block metaTitle %}
         " Mode Admin: Recette"
     {% endblock %}

     {% block title %}   
         Mode Admin: Recette         
     {% endblock %}
     
     {% block body %}

         <main class="Form"> 
     
             <section class="text-center">
 
                 <h1 class="h1 mb-3 font-weight-normal"> Mode Admin: Recette </h1>

             </section>
     
             <article>

                 <table class="table table-dark table-hover">

                     <tbody>

                         <tr>
                             <th> Id </th>
                             <td> {{ recette.id }} </td>
                         </tr>

                         <tr>
                             <th> Nom de la recette </th>
                             <td> {{ recette.name }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Image </th>
                             <td> {{ recette.image }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Temps de préparation </th>
                             <td> {{ recette.tempsPreparation }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Temps de cuisson </th>
                             <td> {{ recette.tempsCuisson }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Nombre de personnes </th>
                             <td> {{ recette.nbPersonnes }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Difficulté </th>
                             <td> {{ recette.difficulte }} </td>
                         </tr> 

                     </tbody>

                 </table>
     
             </article>

             <article class="btn-group-vertical">

                 <button href="{{ path('administration_recette_edit', {'id': recette.id}) }}" type="submit" class="btn btn-success col-12 btn-lg px-4 gap-3">                                
                     Modifier
                 </button>
    
                 <button href="{{ include('administration_recette/_delete_form.html.twig') }}" type="submit" onsubmit="return confirm('Voulez vraiment supprimer ce fichier?');" class="btn btn-success col-12 btn-lg px-4 gap-3">                                
                     Supprimer
                 </button>

                 <button href="{{ path('administration_recette_index') }}" type="submit" class="btn btn-success col-12 btn-lg px-4 gap-3">                                
                     Retour à la liste 
                 </button>

             </article>

         </main>   

     {% endblock %}
