                             <img class="administrationLogo col-6" src="{{asset ('Images/ingrédients.jpg')}}" alt="image d'une persone type emoji">
                         </figure>

                         <button href="{{path("administration_ingredients_index")}}" type="submit" class="btn btn-success bg-gradient col-6 btn-lg px-4 gap-3">                                
