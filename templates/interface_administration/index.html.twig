 {% extends 'base.html.twig' %}

     {% block metaTitle %}
         " Interface d'administration "
     {% endblock %}   

     {% block title %}
         Interface d'administration
     {% endblock %}
     
     {% block body %}

         <main class="Form"> 

             <section class="text-center">     
 
                 <h1 class="h1 mb-3 font-weight-normal"> Interface d'administration </h1>

             </section>      

             <article class="container">

                 <div class="row">

                     {# ? Partie: Gérer les utilisateurs  #}

                     <section class="col-6  administrationCard">

                         <figure class="cardImage">
