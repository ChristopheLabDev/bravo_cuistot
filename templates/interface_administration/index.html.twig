                         </figure>
                         <button href="{{path("user_index")}}" type="submit" class="btn btn-success bg-gradient col-6 btn-lg px-4 gap-3">                                
                             Gérer les utilisateurs
                         </button> 

                     </section>

                     {# ? Partie: Gérer les recettes  #}

                     <section class="col-6 administrationCard">

                         <figure class="cardImage">
