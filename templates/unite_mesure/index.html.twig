 {# ? Partie : Gestion des unités de mesures #ModeAdmin #}
 
 {% extends 'base.html.twig' %}

     {% block title %}
         Gestion des unités de mesures
     {% endblock %}
     
     {% block body %}

         <main class="Form">
                 
             <section class="text-center">
     
                 <h1 class="plantFont h1 mb-3 font-weight-normal"> Gestion des unités de mesures </h1>
          
             </section>   

             <article>
     
                 <table class="table table-dark table-hover">

                     <thead>

                         <tr>
                             <th> Id </th>
                             <th> Nom de l'unité de mesure </th>
                             <th> Action </th>
                         </tr>

                     </thead>

                     <tbody>

                     {% for unite_mesure in unite_mesures %}

                         <tr>
                             <td> {{ unite_mesure.id }} </td>
                             <td> {{ unite_mesure.name }} </td>
                             <td>
                                 <a href="{{ path('unite_mesure_show', {'id': unite_mesure.id}) }}" class="btn_spe"> Voir </a>
                                 <a href="{{ path('unite_mesure_edit', {'id': unite_mesure.id}) }}" class="btn_spe"> Modifier </a>
                             </td>
                         </tr>

                     {% else %}

                         <tr>
                             <td colspan="3"> Aucun élément ne correspond à votre recherche </td>
                         </tr>

                     {% endfor %}

                     </tbody>

                 </table>
     
                 <a type="submit" href="{{ path('unite_mesure_new') }}" class="btn btn-success col-12 btn-lg px-4 gap-3"> 
                     Créer une nouvelle unité de mesure
                 </a>

         </main>

     {% endblock %}
