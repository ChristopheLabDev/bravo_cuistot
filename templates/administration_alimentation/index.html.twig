    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alimentation in alimentations %}
            <tr>
                <td>{{ alimentation.id }}</td>
                <td>{{ alimentation.name }}</td>
                <td>
                    <a href="{{ path('administration_alimentation_show', {'id': alimentation.id}) }}">show</a>
