     {% extends 'base.html.twig' %}
     
         {% block metaTitle %}
             " Utilisateur "
         {% endblock %}

         {% block title %}
             Utilisateur
         {% endblock %}
         
         {% block body %}

             <main class="Form">  
         
             <section class="text-center">
 
                 <h1 class="plantFont mb-3 font-weight-normal"> Recette </h1>
 
             </section>

             <article>

                 <table class="table table-dark table-hover">

                     <tbody>

                         <tr>
                             <th> Id </th>
                             <td> {{ user.id }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Pseudo </th>
                             <td> {{ user.login }} </td>
                         </tr> 
 
                         <tr> 
                             <th> Roles </th>
                             <td> {{ user.roles ? user.roles|json_encode : '' }} </td>
