     {{ form_start(form) }}
     
             <div class="Form">                 

                 {# <article class="text-center"> #}

                     <div class="row">

                         {# **************************** LOGIN ***************************** #}

                             <section class="col-6">

                                 {# *** LABEL *** #}
                                 {{ form_label(form.login) }}
                             
                                 {# *** INPUT *** #}
                                 {{ form_widget(form.login) }}
                             
                             </section>

                         {# **************************** EMAIL ************************** #}

                             <section class="col-6">
                             
                                 {# *** LABEL *** #}
                                 {{ form_label(form.email) }}
                             
                                  {# *** INPUT *** #}
                                 {{ form_widget(form.email) }}
                             
                             </section>
                         
                         {# **************************** PASSWORD ************************** #}

                             <section class="col-6">
                             
                                 {# {{ form_label(form.plainPassword) }} #}
                             
                                 <label> Mot de passe </label>
                 
                                 {{ form_widget(form.plainPassword,{ 
                             
                                     'attr':{ 
                             
                                     'class':'plainPassword' }}) }}     
                             
                             </section>

                     </div>         
                         
                         {# **************************** ROLES ************************** #}
 
                     <div class="row">

                             <section class="col-6">

                                 {# <label> Roles </label> #}
                             
                                 {# *** LABEL *** #}
                                 
                                 <label>
                                     {{ form_label(form.roles) }}
                                 </label>
                             
                                 {# *** INPUT *** #}

                                         {{ form_widget(form.roles) }}
                                    
                             </section>                                       
 
                     </div>  

                         {# **************************** AVATAR ************************** #}

                     <div class="row">

                             <section class="col-6">
                             
                                 {# *** LABEL *** #}
                                 {{ form_label(form.avatar) }}
                             
                                  {# *** INPUT *** #}
                                 {{ form_widget(form.avatar) }}
                             
                             </section>

                     </div> 
  
                     <hr style="color:white;"/>
  
                     <button class="btn btn-dark col-12  btn-lg px-4 gap-3">
                         {{ button_label|default('Sauvegarder') }}
                     </button>
          
     {{ form_end(form) }}


                                  
