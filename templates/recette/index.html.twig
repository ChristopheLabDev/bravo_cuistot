 {# ? Partie : Gestion des recettes #}
 
 {% extends 'base.html.twig' %}
   
     {% block metaTitle %}
         " Gestion des recettes "
     {% endblock %}

     {% block title %}
         Gestion des recettes
     {% endblock %}
     
     {% block body %}

         <main class="Form"> 

             <div class="py-5 text-center col-12">

                {# *********************************************** #}

                 <section> 

                     <h1> Gestion des recettes </h1>

                         <hr/>

                             <p> 
                                 <em> Consulter la liste des utlisateurs de votre site et administrer leurs droits. </em>  ðŸ“‡ 
                             </p>

                         <hr/>

                 </section>

                 {# *********************************************** #}

                 <article class="col-12 row">

                     {% for recette in recettes %}

                         <div class="col-6 cardRecette">

                             <a href="{{path("recette_show", {'id': recette.id})}}">

                                 {% if recette.image %}

                                     <img src="#" />

                                     <h2> {{recette.name}} </h2>

                                 {% else  %}

                                     <h2> {{recette.name}} </h2>

                                 {% endif %}

                             </a>

                             {# ? Feuille du bouton Delete #ModeAdmin #}

                             {% if is_granted('ROLE_ADMIN') %}

                                 <form method="post" action="{{ path('recette_delete', {'id': recette.id}) }}" onsubmit="return confirm('Voulez vraiment supprimer cette recette ?');">
                                   
                                     <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
                                    
                                     <button class="btn btn-secondary btn-lg px-4 col-12">
                                         Supprimer 
                                     </button>
                              
                                </form>

                             {% endif %}

                         </div>

                     {% endfor %}

                 </article>

                 {# *********************************************** #}

             <div/>      

         </main>         
     
     {% endblock %}
     
     