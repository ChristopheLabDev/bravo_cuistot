 {% extends 'base.html.twig' %}

     {% block metaTitle %}
         " Mode Admin: Ingrédients "
     {% endblock %}
      
     {% block title %}
         Mode Admin: Ingrédients
     {% endblock %}
     
     {% block body %}

         <main class="Form"> 
     
             <section class="text-center">
 
                 <h1 class="h1 mb-3 font-weight-normal"> Mode Admin: Ingrédients </h1>

             </section>

             <article>

                 <table class="table table-dark table-hover">

                     <tbody>

                         <tr>
                             <th> Id </th>
                             <td> {{ ingredient.id }} </td>
                         </tr>

                         <tr>
                             <th> Nom </th>
                             <td> {{ ingredient.name }} </td>
                         </tr>

                     </tbody>

                 </table>

             </article>  

             <article>

                 <a href="{{ path('administration_ingredients_edit', {'id': ingredient.id}) }}"  class="btn btn-success col-12 btn-lg px-4 gap-3">                                
                     Modifier
                 </a>    

                 {{ include('administration_ingredients/_delete_form.html.twig') }}
                    
                 <a href="{{ path('administration_ingredients_index') }}" class="btn btn-success col-12 btn-lg px-4 gap-3">                                
                     Retour à la liste 
                 </a>   

             </article>

         </main>       

     {% endblock %}
